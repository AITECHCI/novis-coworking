{
  "compilerOptions": {
    "target": "ES2017", // Version de ECMAScript cible
    "module": "esnext", // Type de module à utiliser
    "lib": [
      "dom",
      "dom.iterable",
      "esnext" // Bibliothèques à inclure
    ],
    "allowJs": true, // Autoriser les fichiers JavaScript
    "skipLibCheck": true, // Ignorer la vérification des types dans les fichiers de déclaration
    "strict": true, // Activer toutes les options de vérification stricte
    "noEmit": true, // Ne pas émettre de fichiers de sortie
    "esModuleInterop": true, // Activer l'interopérabilité des modules ES
    "moduleResolution": "bundler", // Résolution des modules
    "resolveJsonModule": true, // Autoriser l'importation de modules JSON
    "isolatedModules": true, // Traiter chaque fichier comme un module isolé
    "incremental": true, // Activer la compilation incrémentielle
    "jsx": "preserve", // Préserver le JSX
    "types": [
      "node"
    ], // Inclure les types Node.js
    "paths": {
      "@/*": [
        "./*" // Chemins d'accès personnalisés
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Fichier d'environnement Next.js
    "**/*.ts", // Inclure tous les fichiers TypeScript
    "**/*.tsx", // Inclure tous les fichiers TSX
    ".next/types/**/*.ts" // Inclure les types Next.js
  ],
  "exclude": [
    "node_modules" // Exclure le dossier node_modules
  ]
}
